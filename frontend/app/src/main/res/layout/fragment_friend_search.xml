<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:navigationIconTint="@color/brand_light_blue"
        app:title="Search Result"
        app:titleTextColor="@color/brand_light_blue"
        app:layout_constraintTop_toTopOf="parent"/> >

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_search_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You searched for shigurere"
        />

    <include
        app:layout_constraintTop_toBottomOf="@id/tv_search_hint"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/layout_user_detail"/>
</androidx.constraintlayout.widget.ConstraintLayout>
